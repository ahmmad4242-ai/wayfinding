# Environment
FPA_ENV=production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql://fpa_user:your_password@localhost:5432/fpa_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# File Storage
UPLOAD_DIR=/app/data/uploads
OUTPUT_DIR=/app/data/outputs
CACHE_DIR=/app/data/cache
MAX_UPLOAD_SIZE=52428800  # 50MB

# Processing Limits
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=600  # 10 minutes

# OCR Settings
TESSERACT_LANG=ara+eng
OCR_DPI=300
ENABLE_EASYOCR=true

# Detection Models
YOLO_MODEL=yolov8n.pt
YOLO_CONFIDENCE=0.5
YOLO_IOU=0.45

# Analysis Settings
DEFAULT_SCALE_UNIT=meters
MIN_ROOM_AREA=2.0  # mÂ²
MIN_CORRIDOR_WIDTH=1.2  # m
MAX_EGRESS_DISTANCE=60.0  # m

# Color Analysis
COLOR_PALETTE_SIZE=10
COLOR_SIMILARITY_THRESHOLD=30

# Compliance Standards
DEFAULT_BUILDING_CODE=saudi_sbc
ENABLE_ADA_CHECK=true
ENABLE_FIRE_SAFETY_CHECK=true

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=https://flows.aqeeli.com,https://wfapi.aqeeli.com

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
SENTRY_DSN=

# External Services (optional)
POWERBI_API_KEY=
IFC_EXPORT_ENABLED=true
